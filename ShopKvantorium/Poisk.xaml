                            <Label Text="Кванто-украшения"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="yk.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Обувь-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
