<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopKvantorium.PoiskS"
             Title="Поиск">

    <Grid>
        <ScrollView Margin="0,60,0,0" Orientation="Vertical">

        <VerticalStackLayout>

                <Frame HeightRequest="70" WidthRequest="380" BackgroundColor="Red" BorderColor="Transparent" Margin="0,-10,0,0">
                    <SearchBar Placeholder="Поиск" TextColor="White" PlaceholderColor="White" CancelButtonColor="White" BackgroundColor="#FF7373" />
                </Frame>


                <HorizontalStackLayout>

                <!--Информационное-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Информационное направление"  Margin="120,30,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                <Image Source="it.png" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Инжинерное-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Инжинерное направление"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                <Image Source="hitech.png" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--VR направление-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="VR направление"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                    <Image HeightRequest="150" WidthRequest="150" Source="vr.png" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Робо-направление-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Робо-направление"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="90" WidthRequest="120" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                    <Image HeightRequest="110" WidthRequest="110" Source="rob.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>


            <HorizontalStackLayout>

                <!--Игравое направление-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Игравое направление"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                <Image Source="igr.png" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Направление СМИ-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Направление СМИ"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                <Image Source="smi.png" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Естественно научное направление-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Естественно научное направление"  Margin="120,30,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="Transparent" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="Transparent" StrokeThickness="4">
                                <Image Source="bio.png" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>


        </VerticalStackLayout>

    </ScrollView>

        <Grid Margin="0,0,0,600" HeightRequest="70" WidthRequest="380" BackgroundColor="Red">
            <Label Text="Поиск" FontSize="18" FontFamily="Bank" TextColor="White" Margin="60,20,0,0"/>
            
            <Border Margin="0,5,310,0" HeightRequest="50" WidthRequest="50" StrokeShape="RoundRectangle 20,20,20,20" Opacity="0.8" BackgroundColor="Transparent" StrokeThickness="1.5" Stroke="Red">
                <Button Clicked="Button_Clicked" HeightRequest="50" WidthRequest="50" BackgroundColor="Transparent" ImageSource="naz.png"/>
            </Border>


        </Grid>

        <!-- Понель навигации -->
    <Grid Margin="0,615,0,0" HeightRequest="55" WidthRequest="380" BackgroundColor="White">

        <Border Margin="0,0,250,10" HeightRequest="45" WidthRequest="55" StrokeShape="RoundRectangle 20,20,20,20" Opacity="0.8" BackgroundColor="White" StrokeThickness="1.5" Stroke="White">
            <Button Clicked="Button_Clicked_1" BackgroundColor="White"  ImageSource="home.png"/>
        </Border>

        <Border Margin="0,0,80,10" HeightRequest="45" WidthRequest="55" StrokeShape="RoundRectangle 20,20,20,20" Opacity="0.8" BackgroundColor="White" StrokeThickness="1.5" Stroke="White">
            <Button Clicked="Button_Clicked_2" HeightRequest="45" WidthRequest="50" BackgroundColor="White"  ImageSource="poisk.png"/>
        </Border>

        <Border Margin="0,0,-80,10" HeightRequest="45" WidthRequest="55" StrokeShape="RoundRectangle 20,20,20,20" Opacity="0.8" BackgroundColor="White" StrokeThickness="1.5" Stroke="White">
            <Button Clicked="Button_Clicked_3" HeightRequest="45" WidthRequest="55" BackgroundColor="White"  ImageSource="meropriatia.png"/>
        </Border>

        <Border Margin="0,0,-250,10" HeightRequest="45" WidthRequest="55" StrokeShape="RoundRectangle 20,20,20,20" Opacity="0.8" BackgroundColor="White" StrokeThickness="1.5" Stroke="White">
            <Button Clicked="Button_Clicked_4" HeightRequest="45" WidthRequest="55" BackgroundColor="White"  ImageSource="profill.png"/>
        </Border>
    </Grid>

    </Grid>
</ContentPage>