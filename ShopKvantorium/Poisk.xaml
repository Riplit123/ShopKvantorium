<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopKvantorium.Poisk"
             Title="Поиск">
    <ScrollView Orientation="Vertical">

        <VerticalStackLayout>

            <Frame HeightRequest="70" WidthRequest="380" BackgroundColor="White" BorderColor="Transparent" Margin="0,-10,0,0" >
                <SearchBar Placeholder="Поиск" TextColor="White" PlaceholderColor="White" CancelButtonColor="White" BackgroundColor="#C0C0C0" />
            </Frame>

            
                <HorizontalStackLayout>

                    <!--Одежда-->
                    <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                            <Grid>
                            <Label Text="Кванто-одежда"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="od.jpg" />
                            </Border>
                            </Grid>
                        </Border>
                    </Grid>

                </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Посуда-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Кванто-посуда"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="ps.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Сумки-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Кванто-сумки"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Label FontSize="7" Margin="20,160,0,0" TextColor="#6B6B6B" FontFamily="Goth" Text="Белый шоппер с принтом канториума"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="sm.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Аксесуары-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Кванто-аксесуары"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="ak.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>


            <HorizontalStackLayout>

                <!--Украшения-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
