                            <Label Text="Кванто-материалы"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Label FontSize="7" Margin="20,160,0,0" TextColor="#6B6B6B" FontFamily="Goth" Text="Худи с принтом канториума"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="mt.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Изделия-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Кванто-изделия"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Label FontSize="7" Margin="20,160,0,0" TextColor="#6B6B6B" FontFamily="Goth" Text="Кросовки с принтом канториума"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="iz.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

        </VerticalStackLayout>

    </ScrollView>
</ContentPage>