                            <Label FontSize="7" Margin="20,160,0,0" TextColor="#6B6B6B" FontFamily="Goth" Text="Перчатки с принтом канториума"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="nb.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Спец. одежда-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
                        <Grid>
                            <Label Text="Кванто-спец одежда"  Margin="120,40,0,0" FontSize="16" FontFamily="Bank" TextColor="Black"/>
                            <Label FontSize="7" Margin="20,160,0,0" TextColor="#6B6B6B" FontFamily="Goth" Text="Штаны с принтом канториума"/>
                            <Border BackgroundColor="#D7D7D7" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 15,15,15,15" Margin="-240,0,0,0" Stroke="#D7D7D7" StrokeThickness="4">
                                <Image Source="spod.jpg" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout>

                <!--Материалы-->
                <Grid Margin="5,0,0,0">
                    <Border BackgroundColor="White" HeightRequest="100" WidthRequest="350" Stroke="Black" StrokeShape="RoundRectangle 15,15,15,15">
