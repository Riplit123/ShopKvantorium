<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopKvantorium.Registr"
             Title="Registr">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="ФИО" x:Name="FionameEntry"/>
        <Entry Placeholder="Логин" x:Name="UsernameEntry"/>
        <Entry Placeholder="Пароль" x:Name="PasswordEntry" IsPassword="True"/>
        <Entry Placeholder="Повторите пароль" x:Name="ConfirmPasswordEntry" IsPassword="True"/>
        <Button Text="Зарегистрироваться" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>